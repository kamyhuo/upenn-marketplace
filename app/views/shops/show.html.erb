  <thead>
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>State</th>
        <th>Description</th>
        <th>Image</th>
      </tr>
    </thead>
    <tbody>
 	   <ol>
<% @shop.listings.each do |listing| %>

<tr><td><li>

  <%= listing.title %>
</td>

<td>

  $<%= listing.price %>
</td>

<td>

  <% if listing.state = 1 %>
  <% @str = "Active" %>
  <%= @str %> 
  <% else %>
  <% @str = "Inactive" %>
  <%= @str %>
  <% end %>
</td>

<td>

  <%= listing.description %>
</td>
<td>
<%= image_tag listing.avatar.url(:medium) %></td>
<td>
	<% if @shop.users.include? @current_user %>
