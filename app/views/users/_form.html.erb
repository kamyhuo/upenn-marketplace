<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <b><%= form.label :username %></b>
    <%= form.text_field :username, id: :user_username, class: 'form-control' ,placeholder: "ex: firstname.lastname"%>
  </div>


<br>
  <div class="field">
    <b><%= form.label :password %></b>
    <%= form.password_field :password, id: :user_password, class: 'form-control' ,  value: ""%>
  </div>
  <br>
  <div class="field">
    <b><%= form.label :email %></b>
    <%= form.text_field :email, id: :user_email, class: 'form-control', placeholder: "ex: xyz@seas.upenn.edu" %>
  </div>
<br>
  <div class="badge">
    <%= form.submit %>
  </div>
<% end %>
